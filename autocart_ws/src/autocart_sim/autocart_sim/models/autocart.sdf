<?xml version="1.0" ?>
<sdf version="1.10">
  <model name="autocart">
    <pose>0 0 0.3 0 0 0</pose>
    <static>false</static>

    <!-- Base body -->
    <link name="base_link">
      <inertial>
        <mass>15.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <iyy>1.0</iyy>
          <izz>1.0</izz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.9 0.6 0.4</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.9 0.6 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0.2 0.5 0.8 1</ambient>
          <diffuse>0.2 0.6 0.9 1</diffuse>
        </material>
      </visual>

      <!-- Simple basket on top for looks -->
      <visual name="basket_visual">
        <pose>0 0 0.4 0 0 0</pose>
        <geometry>
          <box>
            <size>0.8 0.5 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0.75 0.75 0.78 1</ambient>
          <diffuse>0.85 0.85 0.9 1</diffuse>
        </material>
      </visual>

      <!-- Handle bar -->
      <visual name="handle_visual">
        <pose>-0.4 0 0.6 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.03</radius>
            <length>0.5</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
          <diffuse>0.2 0.2 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- Left wheel -->
    <link name="left_wheel_link">
      <!-- roll yaw pitch order = R P Y  -->
      <!-- We rotate pitch (middle value) by +1.5708 so the cylinder lies sideways -->
      <pose>0.35 0.35 0.10 0 1.5708 0</pose>
      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Right wheel -->
    <link name="right_wheel_link">
      <pose>0.35 -0.35 0.10 0 1.5708 0</pose>
      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>
      <collision name="right_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.12</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Joints for wheels -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel_link</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <friction>0.0</friction>
        </dynamics>
      </axis>
    </joint>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel_link</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1e16</lower>
          <upper>1e16</upper>
        </limit>
        <dynamics>
          <friction>0.0</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Differential drive plugin (Gazebo Harmonic) -->
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <!-- geometry -->
      <wheel_separation>0.6</wheel_separation>
      <wheel_radius>0.15</wheel_radius>

      <!-- limits -->
      <max_linear_acceleration>2.0</max_linear_acceleration>
      <max_angular_acceleration>4.0</max_angular_acceleration>

      <!-- ROS / Gazebo topic interface -->
      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <odom_publisher_frequency>50</odom_publisher_frequency>
    </plugin>

  </model>
</sdf>

