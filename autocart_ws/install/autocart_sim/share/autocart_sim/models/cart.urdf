<?xml version="1.0"?>
<robot name="autocart">

  <!-- Base platform (approx 0.7m long, 0.45m wide) -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <mass value="18.0"/>
      <inertia ixx="0.6" ixy="0.0" ixz="0.0"
               iyy="0.6" iyz="0.0"
               izz="0.8"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.45 0.16"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <geometry>
        <box size="0.7 0.45 0.16"/>
      </geometry>
      <material name="cart_base">
        <color rgba="0.15 0.15 0.18 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Basket (slightly inset) -->
  <link name="basket">
    <visual>
      <origin xyz="0.05 0 0.45" rpy="0 0 0"/>
      <geometry>
        <box size="0.55 0.38 0.35"/>
      </geometry>
      <material name="cart_basket">
        <color rgba="0.85 0.85 0.9 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Handle bar (small red bar at the back) -->
  <link name="handle_bar">
    <visual>
      <origin xyz="-0.32 0 0.7" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.38" radius="0.025"/>
      </geometry>
      <material name="cart_handle">
        <color rgba="0.9 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Wheels (smaller than car wheels) -->
  <link name="wheel_fl">
    <visual>
      <origin xyz="0.26 0.19 0.04" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="wheel_mat">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>
  </link>

  <link name="wheel_fr">
    <visual>
      <origin xyz="0.26 -0.19 0.04" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="wheel_mat"/>
    </visual>
  </link>

  <link name="wheel_rl">
    <visual>
      <origin xyz="-0.26 0.19 0.04" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="wheel_mat"/>
    </visual>
  </link>

  <link name="wheel_rr">
    <visual>
      <origin xyz="-0.26 -0.19 0.04" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.07"/>
      </geometry>
      <material name="wheel_mat"/>
    </visual>
  </link>

  <!-- Rigid joints (visual only) -->
  <joint name="basket_joint" type="fixed">
    <parent link="base_link"/>
    <child link="basket"/>
  </joint>

  <joint name="handle_joint" type="fixed">
    <parent link="base_link"/>
    <child link="handle_bar"/>
  </joint>

  <joint name="joint_wheel_fl" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
  </joint>

  <joint name="joint_wheel_fr" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
  </joint>

  <joint name="joint_wheel_rl" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
  </joint>

  <joint name="joint_wheel_rr" type="fixed">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
  </joint>

</robot>

